{
    "manifest_version": 3,
    "name": "DeepSeek Text Direction Fixer",
    "version": "1.0",
    "description": "Applies correct text direction for Persian and English in DeepSeek Chat",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.deepseek.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "host_permissions": ["*://*.deepseek.com/*"]
  }